<% @todo_lists.each do |todo_list| %>
  <div class="index_row clearfix">
    <h2 class="todo_list_title"><%= link_to todo_list.title, todo_list %></h2>
    <p class="todo_list_sub_title"><%= todo_list.description %></p>
  </div>
<% end %>

<% if @todo_lists.blank? %>
  <p style="text-align: center;">You don't have any lists right now. Click the plus to add one!</p>
  <div class="links" style="margin: 0;">
    <%= link_to new_todo_list_path do %>
      <i class="fa fa-plus"></i>  New Todo
    <% end %>
  </div>
<% else %>
  <div class="links" style="margin-bottom: 10px;">
    <%= link_to new_todo_list_path do %>
      <i class="fa fa-plus"></i>  New Todo
    <% end %>
  </div>
<% end %>


